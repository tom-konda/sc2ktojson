{
  "name": "@tom-konda/sc2ktojson",
  "bin": {
    "sc2ktojson": "./bin/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tom-konda/sc2ktojson.git"
  },
  "version": "0.0.1",
  "description": "This JavaScript library converts from .sc2 (SC2K city file) or .scn (SC2K scenario file) file to JSON",
  "main": "index.js",
  "scripts": {
    "prebuild": "npm run clean",
    "build": "npm-run-all lint --parallel ts:build-* --serial rollup:*-banner rollup:trans-* ts:copy-declaration test",
    "ts:build-bin": "tsc -p ./src/ts/bin",
    "ts:build-lib": "tsc -p ./src/ts/lib",
    "ts:copy-declaration": "node -e \"require('shelljs').cp('-R', './src/ts/declaration', './lib');\"",
    "clean": "node -e \"require('shelljs').rm('-R', ['./bin','./lib', './doc', './index.js']);\"",
    "rollup:lib-banner": "rollup -c ./rollup-configs/rollup.config.js",
    "rollup:cli-banner": "rollup -c ./rollup-configs/rollup.cli-banner.config.js",
    "rollup:trans-node": "rollup -c ./rollup-configs/rollup.config.cjs.js",
    "rollup:trans-legacy-browser": "rollup -c ./rollup-configs/rollup.legacy.config.js",
    "lint": "tslint -c ./tslint.json src/**/*.ts",
    "test": "mocha --require espower-typescript/guess src/test/**.ts"
  },
  "keywords": [
    "sc2", "SC2K"
  ],
  "directories": {
    "test": "src/test/"
  },
  "author": "Tom Konda",
  "license": "MIT",
  "devDependencies": {
    "@types/jsdom": "^11.0.4",
    "@types/mocha": "^2.2.48",
    "@types/node": "^8.9.4",
    "@types/power-assert": "^1.4.29",
    "@types/tmp": "^0.0.33",
    "espower-typescript": "^8.1.3",
    "jsdom": "^11.6.2",
    "mocha": "^5.0.4",
    "npm-run-all": "^4.1.2",
    "power-assert": "^1.4.4",
    "rollup": "^0.57.1",
    "rollup-plugin-buble": "^0.19.2",
    "shelljs": "^0.8.1",
    "tmp": "^0.0.33",
    "tslint": "^5.9.1",
    "tslint-eslint-rules": "^5.1.0",
    "typedoc": "^0.11.1",
    "typescript": "2.7.2"
  },
  "dependencies": {
    "commander": "^2.15.1"
  }
}
